{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "overrides": [
    {
      "files": ["public/**/*.js"],
      "env": { "browser": true, "worker": true, "es2021": true },
      "globals": { "crypto": "readonly", "self": "readonly" }
    }
  ],
  "rules": {
    "no-console": "off",
    "semi": ["error", "always"]
  }
}
